@media screen {
    header .logorpi img {
        width: 231px;
    }

    header .logorpi {
        display: inline-block;
        float: right;
        margin-right: 15px;
        padding-top: 9px;
        margin-right: 15px;
        font-size: 16px;
        padding-left: 12.5px;
        padding-right: 12.5px;
        float: right;
        width: 231;
    }

    header .hlinks {
        float: none;
        display: inline;
        margin-left: 2em;
    }

    header .text {
        margin-left: 1em;
    }

    header .hlink_selected {
        color: #aaccaa !important;
    }

    h1, h2, h3, p {
        font-family: 'Helvetica', Arial, sans-serif;
    }

    h1 {
        font-size: 32px;
        padding-bottom: .5em;
    }

    h2 {
        font-size: 22px;
        padding-bottom: .3em;
    }

    h3 {
        font-size: 18px;
        padding-bottom: .2em;
    }

    .main {
        padding: 1em 1em 0 1em;
    }

    .order {
        display: inline;
        padding-left: .6em;
    }
}
