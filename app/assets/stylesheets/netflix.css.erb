header {
    background-color: #B9090B;
}
header .logo, header .logo a, header .hlinks a {
    display: inline-block;
}
header .shim {
    color: rgba(0, 0, 0, 0);
    display: inline-block;
    width: 0;
}
header .logo, header .logo a, header .shim, header .hlinks, header .hlinks a {
    height: 100%;
}
header .shim, header .logo img {
    vertical-align: middle;
}
header .hlinks {
    float: right;
}
header .hlinks .plaintext {
    color: #FFFFFF;
    font-weight: 700;
    padding: 8.5px;
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
}
header .hlinks .text {
    background: linear-gradient(to bottom, #B9090B 1%, #9F0002 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);
    border: 1px solid #A20103;
    border-radius: 4px;
    color: #FFFFFF;
    font-weight: 700;
    padding: 8.5px;
    text-shadow: 0 1px 0 rgba(0, 0, 0, 0.5);
}
header .hlinks .text:hover {
    background: linear-gradient(to bottom, #D01214 1%, #9F0002 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);
}
header .hlinks .text:active {
    background: linear-gradient(to bottom, #970709 1%, #690102 100%) repeat scroll 0 0 rgba(0, 0, 0, 0);
    color: #B3B3B3;
}
.clearfix { zoom: 1; }a {
    color: #09F;
    text-decoration: none;
}
